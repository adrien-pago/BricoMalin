DirectoryIndex index.php

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Gérer le header Authorization pour Apache (important pour JWT)
    # Cette règle passe le header Authorization à PHP via la variable d'environnement HTTP_AUTHORIZATION
    RewriteCond %{HTTP:Authorization} ^(.*)
    RewriteRule ^(.*)$ - [E=HTTP_AUTHORIZATION:%1]
    
    # Redirection vers index.php si le fichier n'existe pas
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

